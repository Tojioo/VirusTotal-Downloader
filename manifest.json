{
  "manifest_version": 3,
  "name": "VirusTotal Downloader",
  "version": "1.0.0",
  "description": "Download files and scan them with VirusTotal via right-click context menu",
  "permissions": [
    "contextMenus",
    "downloads",
    "activeTab",
    "storage",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "https://www.virustotal.com/*",
    "https://virustotal.com/*",
    "*://*/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "VirusTotal Downloader"
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/report.html", "src/report.js"],
      "matches": ["<all_urls>"]
    }
  ]
}